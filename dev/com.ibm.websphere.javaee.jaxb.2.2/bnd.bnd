-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

Bundle-SymbolicName: com.ibm.websphere.javaee.jaxb.2.2; singleton:=true

Export-Package: javax.xml.bind.*;version="2.2"

Private-Package: org.apache.geronimo.osgi.locator

Import-Package: \
  javax.activation, \
  javax.xml.namespace, \
  javax.xml.stream, \
  org.apache.geronimo.osgi.registry.api;resolution:=optional,\
  *

Bundle-Activator: org.apache.geronimo.osgi.locator.Activator
  
Include-Resource:\
 @lib/jaxb-api.jar!/!META-INF/maven/*, \
 @lib/geronimo-jaxb_2.2_spec-1.0.1.jar!/org/apache/geronimo/osgi/locator/*, \
 @lib/geronimo-jaxb_2.2_spec-1.0.1.jar!/javax/xml/bind/ContextFinder.class, \
 @lib/geronimo-jaxb_2.2_spec-1.0.1.jar!/javax/xml/bind/JAXBContext.class, \
 @lib/geronimo-jaxb_2.2_spec-1.0.1.jar!/javax/xml/bind/JAXBContext$1.class

instrument.disabled: true

publish.wlp.jar.suffix: dev/api/spec

-buildpath: \
	lib/jaxb-api.jar;version=file
