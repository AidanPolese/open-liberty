<project name="com.ibm.ws.logging.hpel.binarylogviewer" default="build">
	<!-- Disable trace/ffdc injection as it can create infinite loop -->
	<property name="no.trace.instrumentation" value="true" />
	
    <import file="../ant_build/public_imports/standard_imports.xml"/>
    <import file="../ant_build/public_imports/internal_imports/wlpbnd.xml"/>

	<property name="publish.tools" value="binaryLog=ws-binarylogviewer.jar"/>
	
	<target name="package" depends="package.package">
		<!--  <bnd> apparently tolerates absent files on classpath string, but not on classpathref. So: -->
		<!-- It also has problems with comma as delimiter, despite claims -->
        <bnd eclipse="false"
            failok="false"
            exceptions="true"
            classpath="${classes.dir}"
            output="${lib.dir}/ws-binarylogviewer.jar"
            files="bnd.bnd.gradle" />
	</target>
	
</project>
