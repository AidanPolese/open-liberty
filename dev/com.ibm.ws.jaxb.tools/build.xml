<project name="com.ibm.ws.jaxb.tools" default="build">
  <property name="instrument.ffdc" value="true" />
  <property name="no.trace.instrumentation" value="true" />
  <import file="../ant_build/public_imports/rejar_imports.xml" />

  <property name="publish.tools" value="jaxb/xjc=ws-xjc.jar,jaxb/schemagen=ws-schemagen.jar"/>

  <!-- Only the jaxb bundle goes into the lib folder -->
  <patternset id="publish.bundles">
    <include name="*jaxb*" />
  </patternset>

  <target name="package">
    <bndPackage bnd.file="jaxb-tools.bnd"
                version="1.0" 
                original.jar.name="jaxb.tools"
                original.jar.version="2.2.10" />
    
    <!-- Use bnd rather than bndPackage here because these are tools jars and our jar naming rules don't apply -->
    <bnd eclipse="false"
         failok="false"
         exceptions="true"
         output="${lib.dir}/ws-xjc.jar"
         files="jaxb_xjc.bnd" />
    <bnd eclipse="false"
         failok="false"
         exceptions="true"
         output="${lib.dir}/ws-schemagen.jar"
         files="jaxb_schemagen.bnd" />
  </target>
</project>