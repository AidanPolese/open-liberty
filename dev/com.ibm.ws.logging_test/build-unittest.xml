<project name="com.ibm.ws.logging_test" default="unittest">
  <import file="../ant_build/public_imports/standard_imports.xml" />
  <import file="../ant_build/public_imports/unittest_imports.xml" />

  <!-- property name="extra.vmargs" value="-Xdebug -Xrunjdwp:transport=dt_socket,address=127.0.0.1:7777" / -->

  <!-- Override coverage properties -->
  <property name="project.under.test" value="com.ibm.ws.logging" />
  <path id="project.under.test.source">
    <dirset dir="..">
      <include name="../${project.under.test}/src*" />
    </dirset>
  </path>

  <target name="compile_unittest" depends="unittest.compile_unittest" if="unittest_available">
    <instrument.ffdc>
      <fileset dir="${unittest.classes.dir}/com/ibm/ws/ras/instrumentation/test" />
    </instrument.ffdc>
  </target>

  <target name="clean" depends="clean.clean">
    <delete includeemptydirs="true" failonerror="false">
      <fileset dir="unittest/test data" />
    </delete>
  </target>
</project>