-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

javac.source: 1.8
javac.target: 1.8

Bundle-Name: MicroProfile Metrics 2.0
Bundle-SymbolicName: com.ibm.ws.microprofile.metrics.2.0

Bundle-Description: MicroProfile Metrics 2.0, version ${bVersion}

IBM-Authorization-Roles: com.ibm.ws.management
IBM-Web-Extension-Processing-Disabled: true

Web-ContextPath: /metrics

Import-Package: \
	javax.enterprise.inject; version="[1.1,3)",\
	*

Private-Package: \
	com.ibm.ws.microprofile.metrics.resources,\
	com.ibm.ws.microprofile.metrics.exceptions,\
	com.ibm.ws.microprofile.metrics.helper,\
	com.ibm.ws.microprofile.metrics.writer
	

Export-Package: \
	!com.ibm.ws.microprofile.metrics.resources,\
	com.ibm.ws.microprofile.metrics2.*,\
	com.ibm.ws.microprofile.metrics.impl,\
	com.ibm.ws.microprofile.metrics

Include-Resource: \
	@build/libs/microprofile-metrics-api-1.2-SNAPSHOT.jar,\
    WEB-INF=resources/WEB-INF
    
Require-Capability: osgi.ee;filter:="(&(osgi.ee=JavaSE)(version=1.8))"

-dsannotations-inherit: true
-dsannotations: com.ibm.ws.microprofile.metrics2.impl.SharedMetricRegistries2,\
	com.ibm.ws.microprofile.metrics2.metrics.MetricsHandler2,\
	com.ibm.ws.microprofile.metrics.ApplicationListener

WS-TraceGroup: METRICS

-buildpath: \
	com.ibm.websphere.org.osgi.core;version=latest,\
	com.ibm.ws.logging;version=latest,\
	com.ibm.websphere.org.osgi.service.component;version=latest,\
	com.ibm.wsspi.org.osgi.service.component.annotations;version=latest,\
	com.ibm.websphere.org.eclipse.microprofile.config.1.2.1;version=latest,\
	com.ibm.websphere.javaee.servlet.3.1;version=latest,\
	com.ibm.websphere.appserver.api.json;version=latest,\
	com.ibm.wsspi.org.osgi.service.event;version=latest,\
	com.ibm.websphere.rest.handler;version=latest,\
	com.ibm.ws.rest.handler;version=latest,\
	com.ibm.websphere.javaee.annotation.1.2;version=latest,\
	com.ibm.ws.org.osgi.annotation.versioning;version=latest,\
	com.ibm.websphere.javaee.interceptor.1.2;version=latest,\
	com.ibm.websphere.javaee.cdi.1.2;version=latest,\
	com.ibm.ws.microprofile.metrics;version=latest,\
	build/libs/microprofile-metrics-api-1.2-SNAPSHOT.jar;version=file
	

 