<?xml version="1.0" encoding="UTF-8"?>
<project name="com.ibm.ws.httpservice_bvt" default="bvt">

  <property name="profile" value="com.ibm.ws.httpservice.bvt" />

  <property name="skip.validate.project" value="true" />

  <path id="osgi.test.bundles">
    <fileset file="${basedir}/bvt-bundle/lib/com.ibm.org.osgi.test.cases.http-4.2.0.jar"/>
  </path>
  
  <target name="prestart-server">
      <property name="test.port" value="${bvt.prop.HTTP_default}" />	
  </target>
  
  <import file="../ant_build/public_imports/standard_imports.xml" />
  <import file="../ant_build/public_imports/bvt_imports.xml" />

  <target name="zap-osgi-test-case"
          description="manual target: update osgi test bundles to remove strict servlet spec checking" >
    <bnd eclipse="false"
         failok="false"
         exceptions="true"
         output="bvt-bundle/lib/com.ibm.tb1.jar"
         files="bvt-bundle/lib/bnd-httptest-tb1.bnd" />

    <bnd eclipse="false"
         failok="false"
         exceptions="true"
         output="bvt-bundle/lib/com.ibm.org.osgi.test.cases.http-4.2.0.jar"
         files="bvt-bundle/lib/bnd-httptest.bnd" />
  </target>
  
  <target name="prepare-test-client" depends="prepare-osgi-test-client" />

</project>
