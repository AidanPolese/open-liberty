<project name="com.ibm.ws.security.wim.adapter.file" default="customBuild">
	<import file="../ant_build/public_imports/standard_imports.xml"/>
	
	<target name="customBuild" depends="build, GenerateUtility"/>
	<!-- Below Jar task is to generate the vmmjaxbplugin.jar utility that is required while generating the model classes -->
	 <target name="GenerateUtility">
		 <jar destfile="${lib.dir}/vmmjaxbplugin.jar">
	              <fileset dir="${classes.dir}" includes="**/VMMAXBCodeGenPlugin.class"/>
		 		  <service type="com.sun.tools.xjc.Plugin"
		 	           provider="com.ibm.websphere.security.wim.base.internal.VMMAXBCodeGenPlugin"/>
		 </jar>
	 </target>
</project>